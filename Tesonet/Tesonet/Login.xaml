<Page x:Class="Tesonet.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Login">
    <Grid>
        <TextBox x:Name="Username" HorizontalAlignment="Left" Height="23" Margin="30,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="30,148,0,0" VerticalAlignment="Top" Width="168"/>
        <Button Content="Login" IsDefault="True"  HorizontalAlignment="Left" Margin="30,173,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" RenderTransformOrigin="0.549,1.453" Height="26"/>
        <Label x:Name="Label_Login" Content="" HorizontalAlignment="Left" Margin="30,199,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.14,0.833" Width="238"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="30,122,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="30,73,0,0" VerticalAlignment="Top" Width="75"/>
        <ContentControl Content="{Binding}"/>
    </Grid>
</Page>
